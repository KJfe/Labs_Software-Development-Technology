<UserControl x:Class="View.UserControls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="400">
    <!--Верхняя панель -->
    <Grid>
        <!-- Устанавливаем три столбца -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Margin="3" Content="Line" Height="20" Width="auto" />
        <Button Grid.Column="1" Margin="3" Content="Polyline" Height="20" Width="auto" />
        <Button Grid.Column="2" Margin="3" Content="Ellipse" Height="20" Width="auto" />
        <Button Grid.Column="3" Margin="3" Content="Polygon" Height="20" Width="auto" />
        <Button Grid.Column="4" Margin="3" Content="Circle" Height="20" Width="auto" />
    </Grid>
</UserControl>
