<Window x:Class="View.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.View"
        xmlns:uc="clr-namespace:View.UserControls"        
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <Canvas x:Name="workspace" >
            <Canvas.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.AppWorkspaceColorKey}}" />
            </Canvas.Background>            
        </Canvas>
        
        <ToolBarTray HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Vertical" Background="{x:Null}">
            <ToolBar ToolBar.OverflowMode="Never" 
                     ToolBarTray.IsLocked="True" HorizontalAlignment="Center" Height="335" VerticalAlignment="Center" Width="63" Margin="0,0,-46,-201" ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderThickness="1" BorderBrush="DimGray" Style="{DynamicResource ToolBarStyle1}">
                <ToolBar.Effect>
                    <DropShadowEffect BlurRadius="3" Color="#FF003AFF" Opacity="0.2" ShadowDepth="3" />
                </ToolBar.Effect>
               
            </ToolBar>
        </ToolBarTray>

    </Grid>

</Window>
